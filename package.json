{
  "name": "pizzaria-backend",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "netlify dev",
    "build": "echo 'Build complete'",
    "deploy": "netlify deploy --prod",
    "db:push": "drizzle-kit push",
    "db:push:force": "drizzle-kit push --force",
    "db:studio": "drizzle-kit studio",
    "db:verify": "tsx src/migrations.ts migrate",
    "db:seed": "tsx src/seeds.ts",
    "db:reset": "tsx src/migrations.ts reset",
    "db:health": "tsx src/migrations.ts health",
    "db:setup": "npm run db:push && npm run db:seed",
    "test:api": "curl -s https://backend-pizzaria.netlify.app/.netlify/functions/api | jq",
    "test:local": "curl -s http://localhost:5000/api | jq",
    "import:csv": "tsx src/scripts/import-data.ts",
    "import:json": "tsx src/scripts/import-data.ts"
  },
  "dependencies": {
    "cloudinary": "^2.0.0",
    "@netlify/functions": "^2.8.1",
    "@neondatabase/serverless": "^0.10.4",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.7.1",
    "ws": "^8.18.0",
    "zod": "^3.25.76",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/node": "20.16.11",
    "@types/ws": "^8.5.13",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "drizzle-kit": "^0.30.6",
    "netlify-cli": "^17.0.0",
    "tsx": "^4.19.0",
    "typescript": "5.6.3"
  }
}